<% if node['db2']['instance']['gid'] %>
DB2_INST.GID              = <%= node['db2']['instance']['gid'] %>
<% end %>
DB2_INST.HOME_DIRECTORY   = <%= node['db2']['instance']['home'] %>
DB2_INST.PASSWORD         = <%= node['db2']['instance']['password'] %>

